#!/bin/bash

COMMIT_MSG_FILE=$1

FIRST_LINE=$(head -n1 "$COMMIT_MSG_FILE")

# Check length
if [ ${#FIRST_LINE} -gt 40 ]; then
    echo "Commit message first line too long (>40 chars)"
    exit 1
fi

# Check lowercase
if [[ "$FIRST_LINE" != "$(echo "$FIRST_LINE" | tr '[:upper:]' '[:lower:]')" ]]; then
    echo "Commit message must be lowercase"
    exit 1
fi

# Check starts with type:
if [[ ! "$FIRST_LINE" =~ ^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert): ]]; then
    echo "Commit message must start with a conventional commit type (feat:, fix:, etc.)"
    exit 1
fi

exit 0